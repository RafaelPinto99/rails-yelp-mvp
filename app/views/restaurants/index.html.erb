<!-- app/views/restaurants/index.html.erb -->
<h1>Restaurants</h1>

<%= link_to "Add a New Restaurant", new_restaurant_path, class: "btn btn-primary mb-3" %>

<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.address %></p>
          <p class="card-text"><%= restaurant.category.capitalize %></p>
          <%= link_to "See Details", restaurant_path(restaurant), class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
